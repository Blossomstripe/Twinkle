{
	"root": true,
	"plugins": ["es5", "es6", "compat"],
	"extends": ["eslint:recommended", "plugin:compat/recommended", "wikimedia/client-es6", "wikimedia/jquery", "wikimedia/mediawiki"],
	"env": {
		"browser": true,
		"jquery": true,
		"es6": true,
		"es2015": true,
		"es2020": true,
		"es2021": true
	},
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"ignorePatterns": ["scripts/", "lib/", "*.json"],
	"rules": {
		"logical-assignment-operators": "off",
		"camelcase": "off",
		"no-alert": "off",
		"no-new-func": "error",
		"no-new-object": "error",
		"no-new-wrappers": "error",
		"no-var": "off",
		"prefer-const": "off",
		"no-extra-parens": "error",
		"no-misleading-character-class": "error",
		"no-template-curly-in-string": "error",
		"require-atomic-updates": "error",
		"curly": "error",
		"indent": [
			"warn",
			"tab",
			{
				"outerIIFEBody": 0,
				"SwitchCase": 1
			}
		],
		"linebreak-style": [0, "windows"],
		"semi": ["error", "always"],
		"no-console": [0],
		"no-unused-vars": [
			1,
			{
				"varsIgnorePattern": "^_"
			}
		],
		"no-redeclare": [1],
		"no-unreachable": [1],
		"no-inner-declarations": [0],
		"eqeqeq": "error",
		"dot-notation": "error",
		"max-len": "off",
		"new-cap": "off",
		"no-else-return": "error",
		"no-extra-bind": "error",
		"no-labels": "error",
		"no-floating-decimal": "error",
		"no-lone-blocks": "error",
		"no-loop-func": "error",
		"no-magic-numbers": "off",
		"no-multi-spaces": "error",
		"no-underscore-dangle": "off",
		"no-useless-concat": "off",
		"strict": ["error", "global"],
		"quotes": [
			1,
			"double",
			{
				"avoidEscape": true
			}
		],
		"quote-props": [
			1,
			"as-needed",
			{
				"keywords": true,
				"unnecessary": true,
				"numbers": false
			}
		],
		"no-empty": [
			"error",
			{
				"allowEmptyCatch": true
			}
		],
		"arrow-spacing": [
			"error",
			{
				"before": true,
				"after": true
			}
		],
		"prefer-arrow-callback": "error",
		"prefer-spread": "error",
		"prefer-template": "error",
		"prefer-rest-params": "off",
		"prefer-exponentiation-operator": "error",
		"require-await": "error",
		"arrow-parens": "error",
		"no-use-before-define": "error",
		"jsdoc/check-tag-names": "off",
		"jsdoc/require-param": "off",
		"jsdoc/require-param-type": "off",
		"jsdoc/require-returns": "off",
		"jsdoc/require-returns-type": "off",
		"jsdoc/valid-types": "off",
		"jsdoc/check-param-names": "off",
		"no-jquery/no-global-selector": "off",
		"no-jquery/no-fade": "off",
		"no-jquery/no-slide": "off",
		"no-jquery/variable-pattern": "off",
		"no-jquery/no-class-state": "off",
		"no-jquery/no-each-util": "off",
		"no-jquery/no-map-util": "off",
		"no-jquery/no-grep": "off",
		"no-jquery/no-constructor-attributes": "off",
		"no-jquery/no-sizzle": "off",
		"no-jquery/no-parse-html-literal": "off",
		"es-x/no-array-prototype-includes": "off",
		"es-x/no-async-functions": "off",
		"es-x/no-logical-assignment-operators": "error",
		"es-x/no-object-entries": "off",
		"es-x/no-object-fromentries": "off",
		"es-x/no-optional-chaining": "off",
		"es-x/no-symbol-prototype-description": "off",
		"mediawiki/class-doc": "off",
		"unicorn/prefer-string-slice": "off"
	},
	"reportUnusedDisableDirectives": true,
	"globals": {
		"$": "readonly",
		"jQuery": "readonly",
		"mw": "readonly",
		"mediaWiki": "readonly",
		"Map": "readonly",
		"Twinkle": "readonly"
	}
}
